{
  "name": "Next.js & AI Station",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",

  // 這裡是用來安裝額外功能的
  "features": {
    // 幫您裝好 Python，這樣才能跑很多 AI 腳本
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    // 確保 Git 功能正常
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // 【關鍵】這裡就是自動化指令！
  // 每次建立環境後，它會自動跑這些指令。
  // 您可以在這裡補充您平常安裝 AI 工具的指令。
  "postCreateCommand": "npm install && pip install llm",

  // 把我們剛存好的 Key 注入進來
  "remoteEnv": {
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "CLAUDE_API_KEY": "${localEnv:CLAUDE_API_KEY}"
  },

  // 幫您把 VS Code 的好用外掛都裝好
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  // 開啟 Next.js 的 3000 port
  "forwardPorts": [3000]
}
