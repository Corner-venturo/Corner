  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx --format json --output-file lint-report.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test smoke.spec.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:full": "playwright test --config=playwright.slow.config.ts --headed",
    "test:e2e:full:orders": "playwright test --config=playwright.slow.config.ts --headed orders.full",
    "test:e2e:full:payments": "playwright test --config=playwright.slow.config.ts --headed payments.full",
    "test:e2e:full:tours": "playwright test --config=playwright.slow.config.ts --headed tours.full",
    "test:e2e:full:create": "playwright test --config=playwright.slow.config.ts --headed *-create.full",
    "test:e2e:full:orders-create": "playwright test --config=playwright.slow.config.ts --headed orders-create.full",
    "test:e2e:full:payments-create": "playwright test --config=playwright.slow.config.ts --headed payments-create.full",
    "test:e2e:full:tours-create": "playwright test --config=playwright.slow.config.ts --headed tours-create.full",
    "audit:file-size": "./scripts/check-file-size.sh",
    "audit:any-usage": "./scripts/check-any-usage.sh",
    "audit:code-quality": "npm run audit:file-size && npm run audit:any-usage && npm run type-check && npm run lint",
    "prepare": "node -e \"if(process.env.CI !== 'true') require('child_process').execSync('npx husky install', {stdio: 'inherit'})\"",
    "setup:local": "./setup-local.sh",
    "db:init": "tsx scripts/init-db.ts",
    "db:export": "node scripts/export-db.js",
    "db:import": "node scripts/import-db.js",
    "db:reset": "node scripts/reset-db.js",
    "db:migrate": "node scripts/db-migrate.js"
  },
